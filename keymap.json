[
  {
    "bindings": {
      "cmd-alt-,": "zed::OpenKeymap"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-d": "editor::DuplicateLine",
      "cmd-shift-d": "editor::SelectNext",
      "shift-alt-up": "editor::AddSelectionAbove",
      "shift-alt-down": "editor::AddSelectionBelow",
      "ctrl-alt-shift-down": "editor::GoToHunk",
      "ctrl-alt-shift-up": "editor::GoToPrevHunk",
      "cmd-/": [
        "editor::ToggleComments",
        {
          "advance_downwards": true
        }
      ],
      "cmd-shift-u": "editor::UndoSelection",
      "cmd-shift-k cmd-shift-d": [
        "editor::SelectNext",
        {
          "replace_newest": true
        }
      ],
      "cmd-k cmd-u": "editor::ConvertToUpperCase",
      "cmd-k cmd-l": "editor::ConvertToLowerCase"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-\\": "workspace::ToggleRightDock",
      "cmd-b": "workspace::ToggleBottomDock",
      "cmd-|": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "cmd-n": "project_panel::NewFile",
      "alt-cmd-n": "project_panel::NewDirectory"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "cmd-up": "editor::ContextMenuFirst",
      "cmd-down": "editor::ContextMenuLast"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "cmd-shift-f": "workspace::NewSearch"
    }
  }
]
