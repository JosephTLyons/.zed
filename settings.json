{
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "buffer_font_family": "Jetbrains Mono NL",
  "buffer_font_size": 12,
  "projects_online_by_default": false,
  "soft_wrap": "editor_width",
  "language_overrides": {
    "Python": {
      "format_on_save": "off",
      "formatter": {
        "external": {
          "command": "black",
          "arguments": [
            "-"
          ]
        }
      }
    },
    "C": {
      "tab_size": 4,
      "format_on_save": "off"
    },
    "C++": {
      "tab_size": 4,
      "format_on_save": "off"
    },
    "JavaScript": {
      "tab_size": 4
    },
    "JSON": {
      "tab_size": 2
    },
    "TypeScript": {
      "tab_size": 4
    },
    "TSX": {
      "tab_size": 4
    }
  },
  "theme": "Atelier Lakeside Dark",
  "journal": {
    "hour_format": "hour12"
  },
  // "active_pane_magnification": 2.0,
  "staff_mode": true,
  "show_whitespaces": "selection",
  "scrollbar": {
    "git_diff": true,
    "show": "auto"
  },
  "project_panel": {
    "dock": "right"
  },
  "terminal": {
    "dock": "bottom"
    // "shell": {
    //   "program": "nu"
    // }
  }
}
