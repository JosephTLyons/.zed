{
    "buffer_font_family": "Jetbrains Mono NL",
    "buffer_font_size": 14,
    "projects_online_by_default": false,
    "soft_wrap": "editor_width",
    "language_overrides": {
        "Python": {
            "format_on_save": {
                "external": {
                    "command": "black",
                    "arguments": [
                        "-"
                    ]
                }
            }
        },
        "C": {
            "tab_size": 4,
            "format_on_save": "off"
        },
        "C++": {
            "tab_size": 4,
            "format_on_save": "off"
        },
        "JavaScript": {
            "tab_size": 4
        },
        "TypeScript": {
            "tab_size": 2
        },
        "TSX": {
            "tab_size": 2
        }
    },
    "theme": "one-dark",
    "journal": {
        "hour_format": "hour12",
        "journal_directory": {
            "always": {
                "directory": "/Users/josephlyons/Desktop/journal"
            }
        }
    }
}
